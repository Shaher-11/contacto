<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field form-group">
  <br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Enetr your email address" %>
  </div>
<br>
  <div class="field form-group">
    <% if @minimum_password_length %>
    <em><% @minimum_password_length %> </em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Enter your password" %>
  </div>
<br>
  <div class="field form-group">
    <br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Confirm your password" %>
  </div>
<br>
  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-success" %>
  </div>
<% end %>
<br>
<%= render "devise/shared/links" %>
